package vn.edu.app.server.dao;

import java.util.Optional;

public interface UserDAO {
    Optional<UserRecord> findByUsername(String username);
    boolean updatePassword(String username, String newHash);

    // record nho nhỏ để chuyên chở dữ liệu users trong DAO
    public final class UserRecord {
        public final String username;
        public final String password;  // đổi passwordHash -> password
        public final String role;
        public final String studentIdOrNull;

        public UserRecord(String username, String password, String role, String studentIdOrNull) {
            this.username = username;
            this.password = password;
            this.role = role;
            this.studentIdOrNull = studentIdOrNull;
        }
    }

}
